# SovereigntyOS Environment Configuration Template
# Copy this file to .env and fill in your actual values

# === PRODUCTION ENVIRONMENT ===
NODE_ENV=production
PORT=3000

# === SUPABASE DATABASE ===
# Get these from your Supabase dashboard: https://supabase.com/dashboard/project/frlmwiryncmtpfrysf
SUPABASE_URL=https://frlmwiryncmtpfrysf.supabase.co
SUPABASE_ANON_KEY=sb_publishable_fuiUDXVw7IybTLX2TCIGiQ_PaBVuqcG
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# === POSTGRESQL CONNECTION ===
# Direct connection to Supabase PostgreSQL
PGHOST=aws-0-ap-southeast-1.pooler.supabase.com
PGPORT=6543
PGDATABASE=postgres
PGUSER=postgres.frlmwiryncmtpfrysf
PGPASSWORD=your_database_password

# Complete database connection string
DATABASE_URL=postgresql://postgres.frlmwiryncmtpfrysf:your_password@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres

# === LOCALAI CONFIGURATION ===
# Cost optimization settings (60-80% AI cost savings)
LOCALAI_BASE_URL=http://localhost:8080
DEPLOY_LOCALAI=true
LOCALAI_FALLBACK=true
ENABLE_COST_OPTIMIZATION=true
LOCALAI_MODELS=sovereign-summary,sovereign-embeddings,sovereign-analysis,sovereign-code

# === AI API KEYS ===
# Core AI services for cloud fallback
PERPLEXITY_API_KEY=pplx-your-key-here
Z_AI_API_KEY=your-z-ai-key-here
KIMI_API_KEY=your-kimi-key-here
AIRTABLE_API_KEY=your-airtable-key-here
AYRSHARE_API_KEY=your-ayrshare-key-here

# === PAYMENT INTEGRATION ===
# Paystack (South African payments)
PAYSTACK_PUBLIC_KEY=pk_test_or_live_key
PAYSTACK_SECRET_KEY=sk_test_or_live_key
PAYSTACK_WEBHOOK_SECRET=your_webhook_secret

# BTCPay Server (Bitcoin payments)
BTCPAY_HOST=your-btcpay-server-url
BTCPAY_API_KEY=your-btcpay-api-key
BTCPAY_STORE_ID=your-store-id
BTCPAY_WEBHOOK_SECRET=your-btcpay-webhook-secret

# === SECURITY ===
# JWT secret for authentication (generate random 32+ character string)
MAS_JWT_SECRET=your-secure-random-jwt-secret-32-chars
KILL_SWITCH_ARMED=true
AUDIT_LOGGING=true

# === CORS & API CONFIGURATION ===
CORS_ORIGIN=*
API_RATE_LIMIT=100
MAX_CONCURRENT_JOBS=10
JOB_RETENTION_DAYS=30

# === MONITORING & LOGGING ===
WINSTON_LOG_LEVEL=info
ENABLE_REAL_TIME_MONITORING=true
COST_SAVINGS_TARGET=1000.00

# === SIM.AI INTEGRATION ===
# Optional: For automatic deployment triggers
SIM_AI_TRIGGER_URL=your-sim-ai-webhook-url
SIM_AI_TOKEN=your-sim-ai-auth-token

# === CLOUDFLARE INTEGRATION ===
# Optional: For CDN and security
CLOUDFLARE_API_TOKEN=your-cloudflare-token
CLOUDFLARE_ZONE_ID=your-zone-id

# === NOTIFICATION CHANNELS ===
# Optional: For system alerts
SLACK_WEBHOOK_URL=your-slack-webhook-url
EMAIL_SMTP_HOST=your-smtp-host
EMAIL_SMTP_USER=your-smtp-user
EMAIL_SMTP_PASS=your-smtp-password

# === BUILD INFORMATION ===
# These are set automatically by CI/CD
# BUILD_ID=auto-generated
# COMMIT_SHA=auto-generated
# BRANCH_NAME=auto-generated
# DEPLOYMENT_DATE=auto-generated